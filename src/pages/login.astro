---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Iniciar Sesión - StartAI">
  <Header />
  
  <!-- Hero de login -->
  <section class="min-h-screen flex flex-col items-center justify-center text-center relative overflow-hidden section-padding-xl">
    <div class="absolute inset-0 gradient-bg opacity-30"></div>
    
    <div class="container-xl">
      <div class="relative z-10 animate-fade-in-up max-w-md mx-auto">
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-display mb-8 leading-tight">
          Bienvenido de <span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">vuelta</span>
        </h1>
        <p class="text-lg text-gray-300 mb-12 leading-relaxed font-light">
          Accede a tu cuenta para continuar transformando tu negocio con IA
        </p>
      </div>
    </div>
  </section>

  <!-- Formulario de login -->
  <section class="section-padding relative bg-gradient-to-b from-transparent to-gray-900/20">
    <div class="container-xl">
      <div class="max-w-md mx-auto">
        <div class="card card-glass p-8 lg:p-10 animate-fade-in-up">
          <h2 class="text-2xl lg:text-3xl font-heading mb-8 text-center text-white">
            Iniciar sesión
          </h2>
          
          <form class="space-y-6">
            <div>
              <label for="email" class="block text-sm font-heading text-gray-300 mb-2">Email</label>
              <input type="email" id="email" name="email" class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 transition-colors duration-300" placeholder="tu@email.com" required>
            </div>
            
            <div>
              <label for="password" class="block text-sm font-heading text-gray-300 mb-2">Contraseña</label>
              <input type="password" id="password" name="password" class="w-full px-4 py-3 bg-gray-800/50 border border-gray-700 rounded-lg text-white placeholder-gray-400 focus:outline-none focus:border-blue-400 transition-colors duration-300" placeholder="Tu contraseña" required>
            </div>
            
            <div class="flex items-center justify-between">
              <label class="flex items-center">
                <input type="checkbox" class="w-4 h-4 text-blue-400 bg-gray-800 border-gray-700 rounded focus:ring-blue-400 focus:ring-2">
                <span class="ml-2 text-sm text-gray-300">Recordarme</span>
              </label>
              <a href="#forgot-password" class="text-sm text-blue-400 hover:text-blue-300 transition-colors duration-300">
                ¿Olvidaste tu contraseña?
              </a>
            </div>
            
            <button type="submit" class="btn btn-primary btn-lg font-heading w-full group">
              <span class="relative z-10">Iniciar sesión</span>
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
              </svg>
            </button>
          </form>
          
          <div class="mt-8 text-center">
            <p class="text-gray-400 text-sm">
              ¿No tienes una cuenta? 
              <a href="/signup" class="text-blue-400 hover:text-blue-300 transition-colors duration-300 font-medium">
                Regístrate aquí
              </a>
            </p>
          </div>
          
          <!-- Separador -->
          <div class="mt-8 flex items-center">
            <div class="flex-1 border-t border-gray-700"></div>
            <span class="px-4 text-gray-400 text-sm">O continúa con</span>
            <div class="flex-1 border-t border-gray-700"></div>
          </div>
          
          <!-- Botones sociales -->
          <div class="mt-8 grid grid-cols-2 gap-4">
            <button class="btn btn-ghost btn-md font-heading group">
              <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-blue-400 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
              </svg>
              Twitter
            </button>
            <button class="btn btn-ghost btn-md font-heading group">
              <svg class="w-5 h-5 mr-2 text-gray-400 group-hover:text-purple-400 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22.46 6c-.77.35-1.6.58-2.46.69.88-.53 1.56-1.37 1.88-2.38-.83.5-1.75.85-2.72 1.05C18.37 4.5 17.26 4 16 4c-2.35 0-4.27 1.92-4.27 4.29 0 .34.04.67.11.98C8.28 9.09 5.11 7.38 3 4.79c-.37.63-.58 1.37-.58 2.15 0 1.49.75 2.81 1.91 3.56-.71 0-1.37-.2-1.95-.5v.03c0 2.08 1.48 3.82 3.44 4.21a4.22 4.22 0 0 1-1.93.07 4.28 4.28 0 0 0 4 2.98 8.521 8.521 0 0 1-5.33 1.84c-.34 0-.68-.02-1.02-.06C3.44 20.29 5.7 21 8.12 21 16 21 20.33 14.46 20.33 8.79c0-.19 0-.37-.01-.56.84-.6 1.56-1.36 2.14-2.23z"/>
              </svg>
              GitHub
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout> 